<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_employment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mainBackground"
    tools:context="com.example.seb.SQLdbCW.UpdateEmployment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/update_employer_edt"
        android:hint="Employer"
        android:layout_below="@+id/update_job_nature_edt"
        android:textColor="@color/entb4"
        android:textColorHint="@color/addText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/update_gross_weekly_edt"
        android:hint="Gross Weekly (£)"
        android:layout_below="@+id/update_employer_edt"
        android:textColor="@color/entb4"
        android:textColorHint="@color/addText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/update_job_nature_edt"
        android:hint="Job Nature"
        android:layout_below="@+id/update_ni_number_edt"
        android:textColor="@color/entb4"
        android:textColorHint="@color/addText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint = "NI Number"
        android:id="@+id/update_ni_number_edt"
        android:maxLength="9"
        android:textColor="@color/entb4"
        android:textColorHint="@color/addText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="NI Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/lblText"
        android:id="@+id/ni_tv" />

    <TextView
        android:text="Job Nature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_ni_number_edt"
        android:layout_alignRight="@+id/ni_tv"
        android:layout_alignEnd="@+id/ni_tv"
        android:textColor="@color/lblText"
        android:id="@+id/job_tv" />

    <TextView
        android:text="Employer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_job_nature_edt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/lblText"
        android:id="@+id/emp_tv" />

    <TextView
        android:text="Gross Weekly (£)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_employer_edt"
        android:layout_alignRight="@+id/emp_tv"
        android:layout_alignEnd="@+id/emp_tv"
        android:textColor="@color/lblText"
        android:id="@+id/earning_tv" />

</RelativeLayout>
